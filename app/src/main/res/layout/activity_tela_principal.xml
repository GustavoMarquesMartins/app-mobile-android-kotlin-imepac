<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".TelaPrincipal">


    <View
        android:id="@+id/containercomponens"
        style="@style/ContainerComponentes"
        android:layout_width="0sp"
        android:layout_height="0sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_deslogar"
        app:layout_constraintTop_toBottomOf="@id/title_tela_principal"/>

    <TextView
        android:id="@+id/title_tela_principal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Tela Principal"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/containercomponens"
        app:layout_constraintStart_toStartOf="@id/containercomponens"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_listagem"
        style="@style/button"
        android:text="@string/listagem_livros"
        app:layout_constraintStart_toStartOf="@id/containercomponens"
        app:layout_constraintEnd_toEndOf="@id/containercomponens"
        app:layout_constraintTop_toBottomOf="@id/title_tela_principal"
        android:drawableRight="@drawable/listagem"
        android:layout_marginTop="100dp"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ver_perfi"
        style="@style/button"
        android:text="@string/ver_perfil"
        app:layout_constraintStart_toStartOf="@id/containercomponens"
        app:layout_constraintEnd_toEndOf="@id/containercomponens"
        app:layout_constraintTop_toBottomOf="@id/btn_listagem"
        android:drawableRight="@drawable/person"
        android:layout_marginTop="50dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_deslogar"
        style="@style/button_deslogar"
        android:text="Sair"
        android:drawableRight="@drawable/deslogar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>